<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seccionIA.ActivityShowResponse">

    <RelativeLayout
        android:id="@+id/container_show_ia_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/madera2">

        <RelativeLayout
            android:id="@+id/wrapper_content_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            android:padding="12dp"
            android:background="@color/white"
            style="@style/SCREEN">

            <RelativeLayout
                android:id="@+id/header_content_response"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@mipmap/header">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ic_plant_ia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plant"
                    android:contentDescription="@string/asistente_ia"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    android:adjustViewBounds="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_show_ia_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/info_ia_card_selected"
                android:textAlignment="center"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@id/header_content_response"
                style="@style/TEXT"/>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>