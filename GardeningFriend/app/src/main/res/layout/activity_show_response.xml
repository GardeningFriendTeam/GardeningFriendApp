<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seccionIA.ActivityShowResponse">

    <RelativeLayout
        android:id="@+id/container_show_ia_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/madera2">

        <ImageView
            android:id="@+id/ic_plant_ia"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_plant"
            android:layout_marginVertical="25dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/asistente_ia" />

        <TextView
            android:id="@+id/text_show_ia_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/info_ia_card_selected"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/cardview_light_background"
            android:layout_below="@id/ic_plant_ia"/>

    </RelativeLayout>

</ScrollView>